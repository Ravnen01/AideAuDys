<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iutbg.lpiem.aideauxdys.MainActivity"
    android:background="#b3f0ff">

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/main_imgVw_setting"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_action_setting"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivSplashScreen"
        android:src="@mipmap/ic_launcher_appareil_photo"
        android:layout_below="@+id/main_imgVw_setting"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/ivPhoto"
        android:src="@drawable/ic_photo_web"
        android:layout_below="@+id/ivSplashScreen"
        android:layout_toLeftOf="@+id/ivSplashScreen"
        android:layout_toStartOf="@+id/ivSplashScreen"
        android:layout_marginRight="140dp"
        android:layout_marginEnd="140dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/ivGalerieImage"
        android:src="@drawable/icone_image"
        android:layout_below="@+id/ivSplashScreen"
        android:layout_toLeftOf="@+id/main_imgVw_setting"
        android:layout_toStartOf="@+id/main_imgVw_setting"
        android:layout_marginRight="126dp"
        android:layout_marginEnd="126dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/ivOption"
        android:src="@drawable/icone_engrenage"
        android:layout_below="@+id/ivGalerieImage"
        android:layout_alignLeft="@+id/ivGalerieImage"
        android:layout_alignStart="@+id/ivGalerieImage"
        android:layout_marginTop="123dp" />


</RelativeLayout>
